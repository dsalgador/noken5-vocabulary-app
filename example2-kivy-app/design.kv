<MyWidget>:
    size: root.size
    orientation: 'vertical'
    padding: 20
    spacing: 0

    #label1 muestra la pregunta
    Label:
        id: label1
        color: 0,0,0,1
        font_size: sp(48)
        canvas.before:
            Color:
                rgba: 0/255.0, 107/255.0, 123/255.0, 0.8
            Rectangle:
                size: self.size
                pos: self.pos

    #label2 muestra la respuesta
    Label:
        id: label2
        font_name: '../fonts/TakaoPMincho.ttf'
        font_size: sp(48)
        color: 0,0,0,0
        canvas.before:
            Color:
                rgba:  43/255.0, 133/255.0, 147/255.0, 1
            Rectangle:
                pos:self.pos
                size: self.size

    BoxLayout:
        padding: 0,10,0,0
        spacing: 10
        size_hint:1, 0.25
        orientation: 'horizontal'
        Button:
            id: button1
            text: "Mostrar pregunta"
            on_release: root.showquestion()

        Button:
            id: button2
            text: "Mostrar respuesta"
            on_release: root.showanswer()

